    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "[cpp]": {
        "editor.tabSize": 2,
    },
    "[c]": {
        "editor.tabSize": 2,
    },
    
    "clangd.fallbackFlags": [
        "-std=c++20",
        "-I/src/include"
    ],
}
